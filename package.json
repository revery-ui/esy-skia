{
  "name": "esy-skia",
  "version": "0.5.0",
  "description": "Mirror of skia repo, buildable with esy",
  "directories": {
    "doc": "docs",
    "example": "example",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/revery-ui/esy-skia.git"
  },
  "bugs": {
    "url": "https://github.com/revery-ui/esy-skia/issues"
  },
  "homepage": "https://skia.org",
  "esy": {
    "buildEnv": {
      "PATH": "#{self.target_dir : $PATH}"
    },
    "buildsInSource": true,
    "build": [
      [
        "bash",
        "./esy/build.sh",
        "#{os}",
        "#{esy-libjpeg-turbo.install}"
      ]
    ],
    "install": [
      [
        "bash",
        "./esy/install.sh",
        "#{os}"
      ]
    ],
    "exportedEnv": {
      "SKIA_INCLUDE_PATH": {
          "val": "#{self.install / 'include'}",
          "scope": "global"
      },
      "SKIA_LIB_PATH": {
          "val": "#{self.lib}",
          "scope": "global"
      },
      "LD_LIBRARY_PATH": {
          "val": "#{self.lib : $LD_LIBRARY_PATH}",
          "scope": "global"
      },
      "PKG_CONFIG_PATH": {
        "val": "#{self.lib : $PKG_CONFIG_PATH}",
        "scope": "global"
      }
    }
  },
  "dependencies": {
    "@esy-cross/ninja-build": "^1.8.2001",
    "esy-libjpeg-turbo": "prometheansacrifice/libjpeg-turbo#50e8e32c48"
  }
}
